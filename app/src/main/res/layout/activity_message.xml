<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bookitfava.nasaspaceapps.moonchaser.MessageActivity"
    android:background="@drawable/background">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etMessage"
        android:elevation="6dp"
        android:background="#AAA"
        android:gravity="center"
        android:layout_above="@+id/bBack"
        android:layout_centerHorizontal="true"
        android:lines="5"
        android:layout_margin="10dp"
        android:foregroundGravity="center_vertical|center_horizontal" />

    <Button
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:text="BACK"
        android:id="@+id/bBack"
        android:onClick="bBackClick"
        android:layout_above="@+id/bSend"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:text="SEND"
        android:id="@+id/bSend"
        android:onClick="bSendClick"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bBack"
        android:layout_alignEnd="@+id/bBack" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/mesechina3"
        android:clickable="false" />

</RelativeLayout>
